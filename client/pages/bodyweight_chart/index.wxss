/* pages/bodyweight_chart/index.wxss */

.container-bodyweight_chart {
  display: flex;
  flex-direction: column;
}

.bodyweight_chart {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
}

.date-cell {
  position: absolute;
  top: 50%;
  width: 100%;
}

.bodyweight-field {
  position: absolute;
  top: 60%;
  width: 100%;
}

.bodyweight-ps {
  font-size: 20rpx;
  color: #BAB9BB;
  display: flex;
  align-items: center;
  justify-content: center;
}