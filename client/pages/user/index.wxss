/* pages/user/index.wxss */

.head-height {
  height: 240rpx;
}

.head {
  display:flex;
  width: 100%;
  background-color: #584B5D;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: relative;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
}