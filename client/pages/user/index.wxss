/* pages/user/index.wxss */

.head-height {
  height: 240rpx;
}

.head {
  display:flex;
  width: 100%;
  background-color: #584B5D;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: relative;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 40rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
}

.version {
  font-size: 20rpx;
  color: #BAB9BB;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cell-feedback {
  position: absolute;
  z-index: 1;
  width: 100%;
}

.feedback {
  position: absolute;
  z-index: 2;
  height:85rpx;  
  text-align: center;
  line-height: 38px; 
  background-color: transparent;
  background: none !important;
  width: 100%;
}

.feedback::after{
  border:none;
}